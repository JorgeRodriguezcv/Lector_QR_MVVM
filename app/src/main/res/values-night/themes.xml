<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PixelProbeQRDeluxe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cambio el color de la barra de arriba. -->
        <item name="android:statusBarColor">@color/secondary</item>

    </style>

    <style name="Theme.PixelProbeQRDeluxe" parent="Base.Theme.PixelProbeQRDeluxe" />

    <style name="TitleBaseStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="Title" parent="TitleBaseStyle">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="SubTitle" parent="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:buttonStyle">@style/CustomDialogButtonStyleNight</item>
    </style>

    <style name="CustomDialogButtonStyleNight" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/secondary</item>
    </style>

</resources>